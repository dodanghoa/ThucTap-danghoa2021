<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:background="@drawable/custom_input"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/lnHeader"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="5dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvMaDonHang"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="14dp"
                android:layout_weight="2"
                android:text="@string/madonhang"
                android:textColor="@color/black"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/tvTrangThai"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:text="@string/dataodon"
                android:textAlignment="center"
                android:textColor="#FBC02D"
                android:textSize="16dp"
                android:textStyle="bold" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:background="@android:color/black" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="20dp">

            <ImageView
                android:id="@+id/ivLogo"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_gravity="center"
                android:src="@drawable/logo" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="right"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Tiền cước: "
                        android:textColor="@color/black" />

                    <TextView
                        android:id="@+id/tvTienCuoc"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="23,000đ"
                        android:textColor="#FF9800" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="right"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Tiền thu hộ: "
                        android:textColor="@color/black" />

                    <TextView
                        android:id="@+id/tvTienThuHo"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="200,000đ"
                        android:textColor="#FF9800" />

                </LinearLayout>


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_marginRight="10dp"
                            android:src="@drawable/ic_baseline_brightness_2_24" />

                        <TextView
                            android:id="@+id/tvDiaChiGui"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="2B/18 ấp bình dường 1, Dĩ An , Bình Dương" />

                    </LinearLayout>

                    <LinearLayout

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_marginRight="10dp"
                            android:src="@drawable/ic_baseline_brightness_1_24" />

                        <TextView
                            android:id="@+id/tvDiaChiNhan"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Địa chỉ đến" />

                    </LinearLayout>


                </LinearLayout>
            </LinearLayout>


        </LinearLayout>


        <Button
            android:id="@+id/btnXacNhanDiGiao"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#18855C"
            android:text="Đi giao hàng"
            android:textColor="@color/white"
            android:visibility="gone" />

        <Button
            android:id="@+id/btnXacNhanGiaoThanhCong"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#03A9F4"
            android:text="Xác nhận giao thàng công"
            android:textColor="@color/white"
            android:visibility="gone" />

        <Button
            android:id="@+id/btnHuyDonHang"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#E32214"
            android:text="Hủy đơn hàng"
            android:textColor="@color/white"
            android:visibility="gone" />

        <LinearLayout
            android:id="@+id/lnLyDoHuy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">

            <EditText
                android:id="@+id/edtLyDoHuy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Lý do hủy đơn hàng"/>
        </LinearLayout>

    </LinearLayout>


</LinearLayout>