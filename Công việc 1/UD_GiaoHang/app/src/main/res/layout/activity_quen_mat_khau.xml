<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#18855C"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/lnSignUp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#18855C"
            android:orientation="vertical"
            tools:context=".SignUp">

            <ImageView
                android:layout_width="200dp"
                android:layout_height="150dp"
                android:layout_gravity="center"
                android:src="@drawable/logo" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Boxer delivery"
                android:textSize="40dp"
                android:fontFamily="monospace"
                android:textColor="#ffe0ac"
                android:layout_gravity="center"
                android:textStyle="bold"/>
            <TextView
                android:layout_marginTop="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nhập địa chỉ email muốn khôi phục:"
                android:textSize="19dp"
                android:textColor="#ffe0ac"
                android:layout_gravity="center"
               />
            <com.libizo.CustomEditText
                android:id="@+id/edtEmail"
                android:layout_width="320dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_marginTop="25dp"
                android:hint="Email"
                android:inputType="text"
                android:textColor="@color/white"
                android:textColorHint="#95FFFFFF"
                app:libIZO_clearIconTint="@color/black"
                app:libIZO_setBorderColor="#ffe0ac"
                app:libIZO_setBorderView="true"
                app:libIZO_setClearIconVisible="true"
                app:libIZO_setCornerRadius="8dp"
                app:libIZO_setStrokeWidth="2dp"

                />


            <com.ornach.nobobutton.NoboButton
                android:id="@+id/btnRecovery"
                android:layout_width="220dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginTop="40dp"
                android:layout_marginBottom="20dp"
                android:padding="10dp"
                app:nb_backgroundColor="#ffe0ac"
                app:nb_borderColor="#FFFFFF"
                app:nb_borderWidth="2dp"
                app:nb_focusColor="#FDC464"
                app:nb_radius="8dp"
                app:nb_text="Gửi email xác thực"
                app:nb_textColor="#18855C"
                app:nb_textSize="18dp"
                app:nb_textStyle="bold" />

        </LinearLayout>
    </ScrollView>
</LinearLayout>