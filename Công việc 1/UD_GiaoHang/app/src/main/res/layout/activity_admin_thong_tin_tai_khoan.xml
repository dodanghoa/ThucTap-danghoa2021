<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    tools:context=".Admin_Screen.AD_ThongTinTaiKhoan">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#18855C"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Thông Tin Tài Khoản"
            android:textColor="@color/white"
            android:gravity="center"
            android:textSize="18dp"
            />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            // Giao diện phần người gửi và người nhận
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/edtHoVaTen"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:hint="Họ và tên"
                    android:drawableStart="@drawable/custom_person_ic"
                    android:background="@drawable/custom_input"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:drawablePadding="10dp"
                    android:inputType="text"
                    android:textSize="14sp"/>
                <EditText
                    android:editable="false"
                    android:id="@+id/edtEmail"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:hint="Email"
                    android:drawableStart="@drawable/custom_email_ic"
                    android:background="@drawable/custom_input"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:drawablePadding="10dp"
                    android:textSize="14sp"
                    tools:ignore="Deprecated" />
                <EditText
                    android:id="@+id/edtSoDienThoai"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:hint="SỐ Điện Thoại"
                    android:drawableStart="@drawable/custom_phone_ic"
                    android:background="@drawable/custom_input"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:drawablePadding="10dp"
                    android:inputType="number"
                    android:textSize="14sp"/>
                <EditText
                    android:id="@+id/edtNgaySinh"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:hint="Ngày Sinh"
                    android:drawableStart="@drawable/ic_baseline_calendar_today_24"
                    android:background="@drawable/custom_input"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:drawablePadding="10dp"
                    android:editable="false"
                    android:textSize="14sp"
                    tools:ignore="Deprecated" />
                <EditText
                    android:id="@+id/edtCMND"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:hint="CMND"
                    android:drawableStart="@drawable/ic_baseline_credit_card_24"
                    android:background="@drawable/custom_input"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:drawablePadding="10dp"
                    android:inputType="number"
                    android:textSize="14sp"
                />
                <EditText
                    android:id="@+id/edtDiaChi"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:hint="Địa Chỉ"
                    android:drawableStart="@drawable/custom_location_on_ic"
                    android:background="@drawable/custom_input"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:drawablePadding="10dp"
                    android:inputType="text"
                    android:textSize="14sp"/>
                <Spinner
                    android:id="@+id/spLoaiTaiKhoan"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:entries="@array/TaiKhoan"
                    android:background="@drawable/custom_input"
                    />
                <Button
                    android:id="@+id/btnLuuThongTin"
                    android:layout_width="400dp"
                    android:layout_height="65dp"
                    android:layout_gravity="center"
                    android:text="Lưu tài khoản"
                    android:backgroundTint="#18855C"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>