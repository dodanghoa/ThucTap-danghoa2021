<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/custom_input"
        android:orientation="vertical">
        <LinearLayout
            android:id="@+id/lnHeader"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_madonhang"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="14dp"
                android:layout_weight="1"
                android:text="@string/madonhang"
                android:textColor="@color/black"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/tv_trangthai"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:text="@string/dataodon"
                android:textAlignment="center"
                android:textColor="#FBC02D"
                android:textStyle="bold"
                android:textSize="18dp"/>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:background="@android:color/darker_gray" />
        <TextView
            android:id="@+id/tv_tennguoigui"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="14dp"
            android:layout_marginRight="10dp"
            android:drawableStart="@drawable/ic_person"
            android:drawablePadding="10dp"
            android:text="@string/tennguoinhan"
            android:textColor="@color/black"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/tv_sodienthoainguoigui"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="14dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="10dp"
            android:drawableStart="@drawable/ic_phone"
            android:drawablePadding="10dp"
            android:text="@string/sodienthoai"
            android:textColor="@color/black"
            android:textSize="14dp" />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:background="@android:color/darker_gray" />
        <TextView
            android:id="@+id/tv_tennguoinhan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="14dp"
            android:layout_marginRight="10dp"
            android:drawableStart="@drawable/ic_person"
            android:drawablePadding="10dp"
            android:text="@string/tennguoinhan"
            android:textColor="@color/black"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/tv_sodienthoai"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="14dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="10dp"
            android:drawableStart="@drawable/ic_phone"
            android:drawablePadding="10dp"
            android:text="@string/sodienthoai"
            android:textColor="@color/black"
            android:textSize="14dp" />


        <TextView
            android:id="@+id/tv_diachi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="14dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="10dp"
            android:drawableStart="@drawable/ic_location_on"
            android:drawablePadding="10dp"
            android:text="@string/diachi"
            android:textColor="@color/black"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/tv_tongcuoc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="14dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="10dp"
            android:drawableStart="@drawable/ic_money"
            android:drawablePadding="10dp"
            android:text="@string/tongcuoc"
            android:textColor="@color/black"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/tv_tenhanghoa"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="14dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="10dp"
            android:drawableStart="@drawable/ic_box"
            android:drawablePadding="10dp"
            android:text="@string/hang_hoa"
            android:textColor="@color/black"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/tv_ghichu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="14dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:drawableStart="@drawable/ic_baseline_note_24"
            android:drawablePadding="10dp"
            android:text="@string/ghichu"
            android:textColor="@color/black"
            android:textSize="14dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="5dp">

            <Button
                android:visibility="gone"
                android:id="@+id/btn_XacNhan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:backgroundTint="#18855C"
                android:text="Xác Nhận "
                android:textColor="@color/white"
                android:textAllCaps="false"/>
            />

            <Button
                android:visibility="gone"
                android:id="@+id/btn_TuChoi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:backgroundTint="#BF4141"
                android:text="Từ Chối"
                android:textColor="@color/white"
                android:textAllCaps="false"/>
            />

        </LinearLayout>
        <Button
            android:visibility="gone"
            android:id="@+id/btn_GiaoNhanVienDiLay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:backgroundTint="#FF9800"
            android:text="Giao Nhân Viên Đi Lấy"
            android:textColor="@color/white"
            android:textAllCaps="false"/>
        <Spinner
            android:visibility="gone"
            android:id="@+id/spNhanVienDiLay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />
        <Button
            android:visibility="gone"
            android:id="@+id/btnXacNhanDiLay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:backgroundTint="#03A9F4"
            android:text="Xác Nhận"
            android:textColor="@color/white"
            android:textAllCaps="false"/>
        <Button
            android:visibility="gone"
            android:id="@+id/btn_GiaoNhanVienDiPhat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:backgroundTint="#4CAF50"
            android:text="Giao Nhân Viên Đi Phát"
            android:textColor="@color/white"
            android:textAllCaps="false"/>
        <Spinner
            android:visibility="gone"
            android:id="@+id/spNhanvienDiPhat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />
        <Button
            android:visibility="gone"
            android:id="@+id/btnXacNhanDiPhat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:backgroundTint="#03A9F4"
            android:text="Xác Nhận"
            android:textColor="@color/white"
            android:textAllCaps="false"/>
    </LinearLayout>
</LinearLayout>