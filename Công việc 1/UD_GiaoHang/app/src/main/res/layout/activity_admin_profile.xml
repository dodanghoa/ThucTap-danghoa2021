<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context=".Admin_Screen.AD_Profile">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#18855C"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Thông tin tài khoản"
                android:textColor="@color/white"
                android:gravity="center"
                android:textSize="18dp"
/>
        </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="850dp"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <FrameLayout
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="10dp">

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/profilePic"
                            android:layout_width="150dp"
                            android:layout_height="150dp"
                            android:layout_gravity="bottom|center_horizontal"
                            android:src="@drawable/avatar" />

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/iv_camera"
                            android:layout_width="48dp"
                            android:layout_height="47dp"
                            android:layout_gravity="bottom|right"
                            android:src="@drawable/ic_add_to_photos"
                            />
                    </FrameLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_marginTop="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <EditText
                        android:id="@+id/et_hoten"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:hint="Họ và tên"
                        android:drawableStart="@drawable/custom_person_ic"
                        android:background="@drawable/custom_input"
                        android:paddingStart="10dp"
                        android:paddingEnd="10dp"
                        android:drawablePadding="10dp"
                        android:inputType="text"
                        android:textSize="14sp"/>

                    <EditText
                        android:id="@+id/et_sdt"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:hint="Số Điện Thoại"
                        android:drawableStart="@drawable/custom_phone_ic"
                        android:background="@drawable/custom_input"
                        android:paddingStart="10dp"
                        android:paddingEnd="10dp"
                        android:drawablePadding="10dp"
                        android:inputType="number"
                        android:textSize="14sp"/>

                    <EditText
                        android:editable="false"
                        android:id="@+id/et_email"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:hint="Email"
                        android:drawableStart="@drawable/custom_email_ic"
                        android:background="@drawable/custom_input"
                        android:paddingStart="10dp"
                        android:paddingEnd="10dp"
                        android:drawablePadding="10dp"
                        android:textSize="14sp"/>

                    <EditText
                        android:id="@+id/et_diachi"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:hint="Địa Chỉ"
                        android:drawableStart="@drawable/custom_location_on_ic"
                        android:background="@drawable/custom_input"
                        android:paddingStart="10dp"
                        android:paddingEnd="10dp"
                        android:drawablePadding="10dp"
                        android:inputType="text"
                        android:textSize="14sp"/>

                    <EditText
                        android:editable="false"
                        android:id="@+id/et_ngaysinh"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:hint="Ngày Sinh"
                        android:drawableStart="@drawable/custom_cake_ic"
                        android:background="@drawable/custom_input"
                        android:paddingStart="10dp"
                        android:paddingEnd="10dp"
                        android:drawablePadding="10dp"
                        android:textSize="14sp"
                        tools:ignore="Deprecated" />

                    <EditText
                        android:id="@+id/et_cmnd"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:hint="CMND"
                        android:drawableStart="@drawable/custom_ballot_ic"
                        android:background="@drawable/custom_input"
                        android:paddingStart="10dp"
                        android:paddingEnd="10dp"
                        android:drawablePadding="10dp"
                        android:inputType="text"
                        android:textSize="14sp"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:orientation="vertical"
                    android:layout_marginTop="20dp">

                    <Button
                        android:id="@+id/btn_capnhattk"
                        android:layout_width="400dp"
                        android:layout_height="65dp"
                        android:layout_gravity="center"
                        android:text="Lưu thông tin tài khoản"
                        android:backgroundTint="#18855C"/>

                </LinearLayout>
            </LinearLayout>
    </LinearLayout>
</ScrollView>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_nav"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="0dp"
        app:itemBackground="@color/teal_700"
        app:itemIconTint="@drawable/selector"
        app:itemTextColor="@drawable/selector"
        app:menu="@menu/admin_bottom_nav" />
</RelativeLayout>